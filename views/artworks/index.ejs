    <% layout('layouts/boilerplate')%>

    <h1 class="text-center mb-5">All Artworks</h1>
    <hr>
    <div>
        <!-- <a href="/artworks/new">Add Artwork</a> -->
    </div>
        <% for (let artwork of artworks){%>
    <div class="card" mb-3>
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" alt="" src="<%=artwork.primaryImageSmall%>">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h4 class="card-title mb-4"><%= artwork.title %> </h4>
                    <p class="card-text"><%= artwork.artistDisplayName %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= artwork.department%></small>
                    </p>
                    <a class="btn btn-dark" href="/artworks/<%=artwork._id%>">View <%=artwork.title%></a>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <% }%>